{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "lib",
    "rootDirs": [
      "lib"
    ],
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": false,
    "strictNullChecks": true,
    "target": "ES2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017"
    ]
  },
  "include": ["lib/*.ts"],
  "exclude": ["lib/*.test.ts"]
}
