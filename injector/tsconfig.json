{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "lib",
    "rootDirs": [
      "lib"
    ],
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": false,
    "strictNullChecks": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016"
    ]
  },
  "include": [ "lib/*" ]
}
