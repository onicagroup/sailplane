{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": "lib",
    "rootDirs": [
      "lib"
    ],
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/esm",
    "removeComments": false,
    "strictNullChecks": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "lib/*"
  ]
}
